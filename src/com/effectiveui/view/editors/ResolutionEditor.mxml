<?xml version="1.0" encoding="utf-8"?>
<mx:ComboBox xmlns:mx="http://www.adobe.com/2006/mxml" 
	dataProvider="{TracModel.getInstance().resolutions}"
	change="updateTicket()" focusIn="this.open()">
	<mx:Script>
		<![CDATA[
			import com.effectiveui.event.UpdateTicketEvent;
			import com.effectiveui.model.TracModel;
			protected function updateTicket():void{
				if(this.selectedItem != data.resolution){
					data.resolution = this.selectedItem;
					if(selectedIndex != 0){
						data.status = "closed";
					} else {
						data.status = "reopened";
					}					
					new UpdateTicketEvent(data).dispatch();
				}
			}
		]]>
	</mx:Script>
	
</mx:ComboBox>
